{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "src",
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "watch": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "inlineSourceMap": false,
    "sourceMap": false,
    "moduleResolution": "node"
  },
  "include": ["src/"],
  "exclude": ["**/node_modules/*"]
}
